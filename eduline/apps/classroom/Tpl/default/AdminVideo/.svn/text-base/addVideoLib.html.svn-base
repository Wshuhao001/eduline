    <script type="text/javascript">
    	$(function(){
			$(":radio").click(function(){
				var v = $(this).val();
				if(v == 3) {
					$('#video').css('display','none');
					$('#doc').css('display','block');
				} else {
					$('#doc').css('display','none');
					$('#video').css('display','block');
				}
			});
		});
		
		function checkForm(form){
			var _this = $(form);
			var title = _this.find('input[name="title"]').val();
